<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_driver_form" model="ir.ui.view">
        <field name="name">Driver Form</field>
        <field name="model">travel.driver</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="phone_no"/>
                    <field name="aadhar_no"/>
                    <field name="pan_no"/>
                    <field name="aadhar_attachment"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_driver_tree" model="ir.ui.view">
        <field name="name">Driver Tree</field>
        <field name="model">travel.driver</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone_no"/>
                <field name="aadhar_no"/>
                <field name="pan_no"/>
            </tree>
        </field>
    </record>

    <record id="action_driver" model="ir.actions.act_window">
        <field name="name">Driver</field>
        <field name="res_model">travel.driver</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
