<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View for Customer Model -->
    <record id="view_customer_tree" model="ir.ui.view">
        <field name="name">travel.customer.tree</field>
        <field name="model">travel.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Customer Model -->
    <record id="view_customer_form" model="ir.ui.view">
        <field name="name">travel.customer.form</field>
        <field name="model">travel.customer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action to open Customer Model views -->
    <record id="action_travel_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">travel.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Manage your customers here.
            </p>
        </field>
    </record>

    <!-- Menu Item for Customer Model -->
<!--    <menuitem id="menu_travel" name="Travel Management"/>-->
<!--    <menuitem id="menu_travel_customer" name="Customers" parent="travel_management_system.menu_travel" action="travel_management_system.action_travel_customer" sequence="40"/>-->
</odoo>
