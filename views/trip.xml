<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Trip Form View -->
    <record id="view_trip_form" model="ir.ui.view">
        <field name="name">trip.form</field>
        <field name="model">travel.trip</field>
        <field name="arch" type="xml">
            <form string="Trip Form">
                <sheet>
                    <group>
                        <field name="from_city_id" required="1"/>
                        <field name="to_city_id" required="1"/>
                        <field name="departure_time" required="1"/>

                    </group>
                    <group>
                        <field name="bus_id" required="1"/>
                        <field name="driver_id" required="1"/>
                        <field name="passenger_capacity" readonly="1"/>
                        <field name="payment_amount" required="1"/>

                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/></div>
            </form>
        </field>
    </record>

    <!-- Trip Tree View -->
    <record id="view_trip_tree" model="ir.ui.view">
        <field name="name">trip.tree</field>
        <field name="model">travel.trip</field>
        <field name="arch" type="xml">
            <tree string="Trip List">
                <field name="from_city_id"/>
                <field name="to_city_id"/>
                 <field name="departure_time"/>
                <field name="bus_id"/>
                <field name="driver_id"/>
                <field name="passenger_capacity"/>
                <field name="payment_amount"/>
            </tree>
        </field>
    </record>

    <!-- Trip Search View -->
    <record id="view_trip_search" model="ir.ui.view">
        <field name="name">trip.search</field>
        <field name="model">travel.trip</field>
        <field name="arch" type="xml">
            <search string="Trip Search">
                <field name="from_city_id"/>
                <field name="to_city_id"/>
                <field name="departure_time"/>
                <field name="bus_id"/>
                <field name="driver_id"/>
            </search>
        </field>
    </record>

    <!-- Trip Action -->
    <record id="action_trip" model="ir.actions.act_window">
        <field name="name">Trips</field>
        <field name="res_model">travel.trip</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_trip_tree"/>
        <field name="search_view_id" ref="view_trip_search"/>
    </record>

    <!-- Trip Menu Item -->
<!--    <menuitem id="menu_travel_trip" name="Trips" parent="menu_travel_root"-->
<!--              action="action_trip" sequence="10"/>-->
</odoo>
