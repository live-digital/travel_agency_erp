<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_travel_bus" model="ir.actions.act_window">
        <field name="name">Buses</field>
        <field name="res_model">travel.bus</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View for Bus -->
    <record id="view_bus_tree" model="ir.ui.view">
        <field name="name">bus.tree</field>
        <field name="model">travel.bus</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="number_plate"/>
                <field name="chassis_no"/>
                <field name="bus_type"/>
                <field name="seating_capacity"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Bus -->
    <record id="view_bus_form" model="ir.ui.view">
        <field name="name">bus.form</field>
        <field name="model">travel.bus</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <group>
                    <group>
                    <field name="name"/>
                    <field name="number_plate"/>
                    <field name="chassis_no"/>
                    </group>
                    <group>
                    <field name="bus_type"/>
                    <field name="seating_capacity"/>
                    </group>
                </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>

