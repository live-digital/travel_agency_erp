<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_city_master_form" model="ir.ui.view">
        <field name="name">city.master.form</field>
        <field name="model">city.master</field>
        <field name="arch" type="xml">
            <form string="City Master">
                <header>
                    <!-- Custom Save Button -->
                    <button name="custom_save" type="object" string="Save" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_city_master_tree" model="ir.ui.view">
        <field name="name">city.master.tree</field>
        <field name="model">city.master</field>
        <field name="arch" type="xml">
            <tree string="City Master">
                <field name="name" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Action for City Master -->
    <record id="action_city_master" model="ir.actions.act_window">
        <field name="name">City Master</field>
        <field name="res_model">city.master</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first City Record
            </p>
        </field>
    </record>
</odoo>
