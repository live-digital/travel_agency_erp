<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_ticket_confirmation" model="mail.template">
            <field name="name">Ticket Confirmation</field>
            <field name="email_from">mangancharan12@gmail.com</field>
            <field name="subject">Your Ticket Confirmation</field>
            <field name="model_id" ref="travel_agency.model_travel_ticket"/>
            <field name="body_html">
                <![CDATA[
                    <p>Dear ${object.customer_id.name},</p>
                    <p>Your ticket from ${object.from_city_id.name} to ${object.to_city_id.name} has been confirmed.</p>
                    <p>Trip Details:</p>
                    <ul>
                        <li>Departure Time: ${object.departure_time}</li>
                        <li>Boarding Time: ${object.boarding_time}</li>
                        <li>Payment Amount: ${object.payment_amount}</li>
                    </ul>
                    <p>Thank you for choosing us!</p>
                ]]>
            </field>
        </record>
    </data>
</odoo>